@model UserViewModel;

<style>
    .form-control:focus{
        box-shadow: none;
    }
</style>
<div class="container-md h-100">
    <div class="w-100 d-flex justify-content-start align-items-center mb-3">
        <h1>SignUp</h1>
    </div>
    <div class="d-flex justify-content-center align-items-center">
        <form class="w-100 d-flex flex-column justify-content-around align-items-center"
            asp-action="SignUp" asp-controller="Login" method="post">
            <div class="w-100 d-flex justify-content-between align-items-center gap-3">
                <div class="w-100 form-outline position-relative">
                    <input type="text" class="form-control" asp-for="FirstName" placeholder="First Name*" />
                    <span class="ms-2 text-danger" asp-validation-for="FirstName"></span>
                </div>
                <div class="w-100 form-outline position-relative">
                    <input type="text" class="form-control" asp-for="LastName" placeholder="Last Name*" />
                    <span class="ms-2 text-danger" asp-validation-for="LastName"></span>
                </div>
                <div class="w-100 form-outline position-relative">
                    <input type="text" class="form-control" asp-for="Username" placeholder="Username*" />
                    <span class="ms-2 text-danger" asp-validation-for="Username"></span>
                </div>
            </div>
            <div class="w-100 form-outline position-relative">
                <input type="text" class="form-control" id="login-email" asp-for="Email" placeholder="Email*" />
                <span class="ms-2 text-danger" asp-validation-for="Email"></span>
            </div>
            <div class="w-100 form-outline position-relative ">
                <input type="password" class="form-control" asp-for="Password" id="password" placeholder="Password*" />
                <span class="ms-2 text-danger" asp-validation-for="Password"></span>
            </div>
            <div class="d-flex justify-content-end align-items-center">
                <a asp-action="Index">Already have account? Login Here</a>
            </div>
            <button class="w-100 btn py-1" style="background-color: #1B74B0; color: white;" type="submit">Signup</button>
        </form>
    </div>
</div>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>