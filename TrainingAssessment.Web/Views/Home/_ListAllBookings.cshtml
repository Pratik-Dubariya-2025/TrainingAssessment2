@model List<BookTicketViewModel>;

<div class="container-fluid">
    @if(Model.Count > 0)
    {
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 d-flex align-items-center gap-3 flex-wrap">
            @foreach(BookTicketViewModel bookTicket in Model)
            {
                string backgroundColor = "#f1f1f1";

                <a class="nav-link w-100 card p-2 bg-opacity-25 @backgroundColor" 
                    style="max-width: 200px; height:370px; cursor: pointer;">
                    <div class="d-flex h-100 flex-column justify-content-start align-items-start gap-2">
                        <div class="p-1">
                            <img src="~/images/download.jpeg" class="w-100 h-100" alt="">
                        </div>
                        <div><span class="fw-medium">Title: </span>@bookTicket.Title</div>
                        <div><span class="fw-medium">Artist: </span> @bookTicket.ArtistName</div>
                        <div><span class="fw-medium">Venue: </span>@bookTicket.Venue</div>
                        <div class="w-100 d-flex gap-2 justify-content-start align-items-center">
                            <div><span class="fw-bold"><i class="bi bi-people"></i></span> <span class="fw-medium">Total Tickets Buy</span></div>
                            <div>@bookTicket.TotalTicketBuy</div>
                        </div>
                        <div class="w-100 d-flex justify-content-start align-items-center gap-2">
                            <div class="fw-bold"><i class="bi bi-stopwatch"></i></div>
                            <div class="text-end" >@bookTicket?.ConcertTime?.ToString("g")</div>
                        </div>
                        <div><span class="fw-medium">Amount Paid: </span>@bookTicket?.TotalPrice</div>
                        <div><span class="fw-medium">Discount: </span>@bookTicket?.DiscountPrice</div>
                    </div>
                </a>
            }
        </div>
    }
    else
    {
        <div class="text-center"><h1>There are no bookings</h1></div>
    }
</div>